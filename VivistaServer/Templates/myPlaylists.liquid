<h1>My playlists</h1>
<div class="pure-g">
	<div class="pure-u-1">
		<table class="pure-table video-list">
			<thead>
			<th>Playlist</th>
			<th>Visibility</th>
			</thead>
			<tbody>
				{% for playlist in playlists %}
				<tr>
					<td width="50%">
						<span>
							<img width="120px" class="video-thumb" src="/api/thumbnail?id={{ playlist.videos[0].id }}">
							<strong>{{ playlist.name | escape }}</strong>
						</span>
					</td>
					<td>
						<form class="pure-form" method="post" action="/update_playlist_privacy?id={{ playlist.id | guidbase64}}">
							<select name="playlist-privacy">
								<option value="0" {% if playlist.privacy == 0 %} selected {% endif %}>Public</option>
								<option value="1" {% if playlist.privacy == 1 %} selected {% endif %}>Organization</option>
								<option value="2" {% if playlist.privacy == 2 %} selected {% endif %}>Unlisted</option>
								<option value="3" {% if playlist.privacy == 3 %} selected {% endif %}>Private</option>
							</select>
							<input type="submit" class="pure-button" value="Update">
						</form>
					</td>
					<td>
						<a class="pure-button" href="/detail_playlist?id={{ playlist.id | guidbase64 }}">Detail/Edit Playlist</a>
						&nbsp;
						<a class="pure-button dangerous-button" href="/delete_playlist?id={{ playlist.id | guidbase64}}">Delete Playlist</a>
					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>
