<!doctype html>

<html lang="en" data-theme="dark">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="google-site-verification" content="5QmW7Fcp5Aof0MdX2Y0jfEJ71wqO9s-bu4742lY4Csg" />

	<title>Vivista - Educational VR tool</title>
	<meta name="description" content="Educational VR tool">
	<meta name="author" content="Vivista">

	<link rel="stylesheet" href="https://unpkg.com/purecss@2.0.5/build/pure-min.css" onerror="this.onerror=null;this.href='pure-min.css';">
	<link rel="stylesheet" href="https://unpkg.com/purecss@2.0.5/build/grids-responsive-min.css" onerror="this.onerror=null;this.href='grids-responsive-min.css';"/>
	<link rel="stylesheet" href="/style.css?v=1.1">

	<link rel="icon" type="image/png" href="/favicon.png"/>
</head>

<body>
	<header class="home-menu pure-menu-horizontal">
		<div class="left">
			<a href="/" id="logo" class="pure-menu-heading pure-menu-image-link"><img src="/Logo.png"></a>
			<a href="/" id="logo-small"  class="pure-menu-heading pure-menu-image-link"><img src="/LogoSmall.png"></a>
		</div>
		<div class="middle">
			<div class="search-bar">
				<input id="search-input" placeholder="Search..." /><button class="pure-button" id="search-button">Search</button>
			</div>
		</div>
		<div class="right">
			<ul class="pure-menu-list">
				<li class="pure-menu-item">
					<a class="pure-menu-link" href="/install">Install Vivista</a>
				</li>
				{% if User %}
					<li class="pure-menu-item pure-menu-has-children pure-menu-allow-hover">
						<a href="#" class="pure-menu-link pure-menu-image-link">
							<img class="profile-picture-small" src="/profile_pictures/{{User.pictureId}}">
						</a>
						<ul class="pure-menu-children">
							<li class="pure-menu-item">
								<a href="/user?name={{ User.username | escape}}" class="pure-menu-link">{{ User.username | escape }}</a>
							</li>
							<li class="pure-menu-item">
								<a href="/my_videos" class="pure-menu-link">My videos</a>
							</li>
							<li class="pure-menu-item">
								<a href="/settings" class="pure-menu-link">Settings</a>
							</li>
							{% if IsAdmin %}
							<li class="pure-menu-item">
								<a href="/admin/dashboard" class="pure-menu-link">Dashboard</a>
							</li>
							<li class="pure-menu-item">
								<a href="/admin/role" class="pure-menu-link">Admin panel</a>
							</li>
							{% endif %}
							<li class="pure-menu-item">
								<span class="pure-menu-link nohover">
									Dark Mode <input type="checkbox" class="toggle dark-mode-toggle" id="dark-mode-toggle-nav">
									<label for="dark-mode-toggle-nav"> </label>
								</span>
							</li>
							<li class="pure-menu-item">
								<a href="/logout" class="pure-menu-link">Log out</a>
							</li>
						</ul>
					</li>
				{% else %}
					<li class="pure-menu-item"><a href="/login" class="pure-menu-link">Login</a></li>
					<li class="pure-menu-item"><a href="/register" class="pure-button">Register</a></li>
				{% endif %}
			</ul>
		</div>
	</header>

	<div class="main-content">
		{{ content | raw }}
	</div>
	<footer class="footer">
		<div class="pure-g">
			<div class="pure-u-1 pure-u-md-1-3">
				<p><a href="/PrivacyPolicy.pdf">Privacy Policy</a></p>
				<p><a href="/cookie-policy">Cookie Policy</a></p>
			</div>
			<div class="pure-u-1 pure-u-md-1-3">
				
			</div>
			<div class="pure-u-1 pure-u-md-1-3">
			</div>
		</div>
	</footer>
	
	<div id="cookie-banner" class="hidden">
		<p>This website makes use of cookies to provide essential functionality. <button id="cookie-banner-confirm" class="pure-button safe">OK</button></p>
		<p><a href="/cookie-policy">Read more</a></p>
	</div>

	<script type="text/javascript" src="/site.js?v=1"></script>
</body>
</html>

