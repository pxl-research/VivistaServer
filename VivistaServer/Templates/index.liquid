<div class="pure-g">
	<div class="pure-u-1">
		<div class="pure-button-group" role="group">
			{% if tab == "New" %}
				<a class="pure-button pure-button-active" href="?tab=new">New</a>
			{% else %}
				<a class="pure-button" href="?tab=new">New</a>
			{% endif %}

			{% if tab == "Popular" %}
				<a class="pure-button pure-button-active" href="?tab=popular">Popular</a>
			{% else %}
				<a class="pure-button" href="?tab=popular">Popular</a>
			{% endif %}

			{% if tab == "MostWatched" %}
				<a class="pure-button pure-button-active" href="?tab=most-watched">Most watched</a>
			{% else %}
				<a class="pure-button" href="?tab=most-watched">Most watched</a>
			{% endif %}

		</div>
		<br>
	</div>

	{% for video in videos %}
		<div class="video-tile pure-u-1 pure-u-sm-1-2 pure-u-md-1-3 pure-u-lg-1-4 pure-u-xl-1-6">
			<a href="/video?id={{ video.id }}">
				<img class="video-thumb pure-img" src="thumb.png">
			</a>
			<p><a href="/video?id={{ video.id }}">{{ video.title }}</a></p>
			<a class="uploader" href="#">{{ video.username }}</a>
		</div>
	{% endfor %}
</div>
