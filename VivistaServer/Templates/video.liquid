<div class="pure-g center">
	<div class="video-info-image pure-u-1">
		<div class="download-message">
			<button data-uri="vivista://{{video.id}}" class="pure-button download-button">
				<span class="play-icon">â–¶</span> Play In Vivista
				<p class="hidden install-message">Don't have Vivista installed? <a href="/install/latest" download>Download now</a></p>
			</button>
		</div>
		<img class="pure-img" src="thumb.png">
	</div>
	<div class="video-info pure-u-1 pure-u-md-1-2">
		<h1 class="title">{{ video.title }}</h1>
		<p class="description">Test description{{ video.description }}</p>
		<p>
			<span class="tag">test tag</span>
			{% for tag in video.tags %}
			<span class="tag">{{ tag.name }}</span>
			{% endfor %}
		</p>
	</div>
	<div class="related-videos">
		<h1>Related videos</h1>
		{% for i in (1..5) %}
		<div class="video pure-g">
			<div class="pure-u-1-3">
				<img class="pure-img" src="thumb.png">
			</div>
			<div class="pure-u-2-3">
				<p class="title">Title even looooooooooooooongeeeeeeeeer</p>
				<p class="uploader">User </p>
			</div>
		</div>
		{% endfor %}
		{% for v in video.relatedVideos %}
		{% endfor %}
	</div>
</div>
